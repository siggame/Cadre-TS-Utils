{
    "defaultSeverity": "error",
    "extends": [
        "tslint-microsoft-contrib",
        "tslint:latest",
        "tslint:recommended",
        "tslint-eslint-rules",
        "tslint-no-math-random"
    ],
    "jsRules": {},
    "rules": {
        // ---- vanilla tslint rules ---- \\
        "completed-docs": [true, {
            "classes": true,
            "functions": { "visibilities": ["exported"] },
            "variables": { "visibilities": ["exported"] },
            "methods": true,
            "properties": true,
            "interfaces": true,
            "enums": true,
            "types": true
        }],
        "import-spacing": true,
        "no-duplicate-switch-case": true,
        "no-empty-interface": false,
        // there are many times when we want promises to execute
        // truely asyncronously
        "no-floating-promises": false,
        // Only until they fix the tsconfig path error
        // "no-implicit-dependencies": [true, "dev", "optional"],
        "no-implicit-dependencies": false,
        "no-redundant-jsdoc": true,
        "no-submodule-imports": false, // silly rule
        "no-unnecessary-type-assertion": true,
        "no-unused-expression": [true, "allow-new"],
        // https://github.com/palantir/tslint/issues/2649
        "no-unused-variable": false,
        "no-void-expression": [true, "ignore-arrow-function-shorthand"],
        // looks worse in games with many numeric values described with floats
        "number-literal-format": false,
        "object-literal-sort-keys": false,
        "one-line": [true, "check-open-brace", "check-whitespace"],
        "trailing-comma": [true, {
            "multiline": "always",
            "singleline": "never",
            "esSpecCompliant": true
        }],
        "typedef": [true,
            "call-signature",
            "parameter",
            "property-declaration"
        ],
        "switch-default": false, // it can make sense for case: returns


        // ---- tslint-eslint-rules ---- \\
        "brace-style": [true, "stroustrup"],
        "new-parens": true,
        "no-any": true, // `any` is dangerous for true type saftey
        "no-bitwise": true,
        "no-constant-condition": [true, { "checkLoops": false }],
        "no-duplicate-imports": false, // for verbosity in games
        "no-ex-assign": true,
        "no-extra-boolean-cast": true,
        "no-extra-semi": true,
        "no-inner-declarations": [true, "both"],
        "no-invalid-regexp": true,
        "no-multi-spaces": true,
        // false positives on wrapping callbacks
        "promise-function-async": false,
        // dumb, js devs should understand truthy-ness
        "space-in-parens": [true, "never"],
        "strict-boolean-expressions": false,
        "ter-func-call-spacing": [true ],
        "ter-indent": [true, 4, { "SwitchCase": 1 }],
        "ter-no-sparse-arrays": true,
        "ter-prefer-arrow-callback": [true],
        "ter-no-irregular-whitespace": true,
        "valid-jsdoc": [true, {
            "prefer": {
              "return": "returns"
            },
            "requireReturn": false,
            "requireReturnType": false,
            "requireParamDescription": true,
            "requireReturnDescription": true,
            "requireParamType": false,
            "matchDescription": ".+|(@inheritdoc)"
        }],


        // ---- tslint-microsoft-contrib ---- \\
        // Until they require regex matching,
        // so game-settings.ts -> ChessGameSettings is allowed
        "export-name": false,
        "max-func-body-length": false,
        "missing-jsdoc": false, // on every file is tedious
        // too many false positives for any method names set/get
        "no-backbone-get-set-outside-model": false,
        // traditional functions have benefits at times, such as names
        "no-function-expression": false,
        // no support to allow in for i++ loops (yet)
        "no-increment-decrement": false,
        "no-relative-imports": false,
        // the property name `type` is so common this rule becomes a pain
        "no-reserved-keywords": false,
        // to allow jsdoc single line block comments, e.g. /** doc string */
        "no-single-line-block-comment": false,
        "no-suspicious-comment": false, // SUPER annoying
        "no-unnecessary-local-variable": false,
        // triggers on all SecondaryWinConditions, we don't want that marked
        "no-unnecessary-override": false,
        // has some issues, incorrect error on Array<string | number>
        "prefer-array-literal": false,
        "prefer-type-cast": false, // as same issues as above


        // --- Misc --- \\
        "no-math-random": true
    },
    "rulesDirectory": []
}
